{
  "name": "mcp-migration-test",
  "version": "1.0.0",
  "description": "Ambiente de teste para migração de API usando MCP",
  "main": "index.js",
  "scripts": {
    "rest-v1-dev": "nodemon src/v1.0/rest/server.ts",
    "rest-v1": "ts-node src/v1.0/rest/server.ts",
    "mcp-v1-dev": "nodemon src/v1.0/mcp/server.ts",
    "mcp-v1": "ts-node src/v1.0/mcp/server.ts",
    "rest-v1.1-dev": "nodemon src/v1.1/rest/server.ts",
    "rest-v1.1": "ts-node src/v1.1/rest/server.ts",
    "mcp-v1.1-dev": "nodemon src/v1.1/mcp/server.ts",
    "mcp-v1.1": "ts-node src/v1.1/mcp/server.ts",
    "agent-dv": "nodemon src/agent/cli.ts",
    "agent": "ts-node src/agent/cli.ts",
    "dev-v1": "concurrently --kill-others --names \"REST,MCP\" --prefix-colors \"blue,green\" \"npm run rest-v1-dev\" \"npm run mcp-v1-dev\"",
    "dev-v1.1": "concurrently --kill-others --names \"REST,MCP\" --prefix-colors \"blue,green\" \"npm run rest-v1.1-dev\" \"npm run mcp-v1.1-dev\"",
    "stop": "node -e \"const { exec } = require('child_process'); const os = require('os'); const cmd = os.platform() === 'win32' ? 'powershell Get-NetTCPConnection -LocalPort 4000,4001,4002,4003 -State Listen -ErrorAction SilentlyContinue ^| ForEach-Object ^{ Stop-Process -Id $_.OwningProcess -Force -ErrorAction SilentlyContinue ^}' : 'lsof -ti :4000,:4001,:4002,:4003 | xargs -r kill -9'; exec(cmd, (err) => { console.log(err ? 'No processes found' : 'Processes stopped'); });\"",
    "quick-test": "node scripts/quick-test.js"
  },
  "dependencies": {
    "@langchain/aws": "^0.1.15",
    "@langchain/core": "^0.3.75",
    "@langchain/langgraph": "^0.4.9",
    "@langchain/mcp-adapters": "^0.6.0",
    "dotenv": "^16.4.5",
    "@modelcontextprotocol/sdk": "^1.17.5",
    "axios": "^1.6.0",
    "cross-spawn": "^7.0.3",
    "express": "^4.21.2",
    "fastmcp": "^3.15.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.16.6",
    "@types/express": "^5.0.3",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "type": "module"
}
